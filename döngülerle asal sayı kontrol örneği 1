//Kullanıcının girdiği sayı asal mı değil mi döngülerle kontrol ediyoruz.

#include <stdio.h>

int main()
{

int j;
int h=1;
int flag=0;

printf("asal olma durumunu merak ettiğiniz sayıyı giriniz:");
scanf("%d",&j);

if(j==1)
{
flag=1;
}

while(h<j-1)
{
h++;

    if(j%h==0)
    {
    flag=1;
    break;
    }
}

if(flag==0)
{
printf("sayı asaldır");
}
    else printf("sayı asal değildir");
    
    return 0;
}
